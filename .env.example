# QuickTalk 混合架构环境配置

# =================================
# 🦀 Rust Backend (主服务器)
# =================================
RUST_PORT=3030
RUST_LOG=info
DATABASE_URL=sqlite:../data/database/quicktalk.sqlite

# =================================
# 🟢 Node.js Services (微服务)
# =================================
NODE_PORT=3031
NODE_ENV=development

# =================================
# 📱 Frontend (前端开发)
# =================================
FRONTEND_PORT=5173
VITE_API_BASE_URL=http://localhost:3030
VITE_WS_URL=ws://localhost:3030

# =================================
# 🗄️ Database & Storage
# =================================
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/database/quicktalk.sqlite
UPLOAD_DIR=./data/uploads
LOG_DIR=./data/logs

# =================================
# 🔐 Security
# =================================
SESSION_SECRET=your_session_secret_change_this_in_production
JWT_SECRET=your_jwt_secret_change_this_in_production
BCRYPT_ROUNDS=12

# =================================
# 🌐 CORS & Networking
# =================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3030,http://localhost:3031
ENABLE_CORS=true

# =================================
# 📁 File Upload
# =================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# =================================
# 📧 Email (可选)
# =================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password

# =================================
# 🔄 Redis (可选)
# =================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password