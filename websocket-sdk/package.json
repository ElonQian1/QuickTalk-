{
  "name": "customer-service-sdk",
  "version": "1.0.0",
  "description": "WebSocket SDK for customer service integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && node scripts/sync-demo.cjs",
    "dev": "tsc --watch --preserveWatchOutput",
    "dev:full": "concurrently \"npm run dev\" \"npm run watch:sync\"",
    "watch:sync": "nodemon --watch dist --exec \"node scripts/sync-demo.cjs\"",
    "test": "jest"
  },
  "keywords": ["websocket", "customer-service", "chat", "sdk"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "nodemon": "^3.0.0",
    "concurrently": "^7.6.0"
  }
}